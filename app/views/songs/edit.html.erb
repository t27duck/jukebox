<% content_for :title, "Editing song" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing song</h1>

  <%= form_with(model: @song, class: "contents") do |form| %>
    <% if @song.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
        <h2><%= pluralize(song.errors.count, "error") %> prohibited this song from being saved:</h2>

        <ul class="list-disc ml-6">
          <% song.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="my-5">
      <%= form.label :title %>
      <%= form.text_field :title, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": @song.errors[:title].none?, "border-red-400 focus:outline-red-600": @song.errors[:title].any?}] %>
    </div>

    <div class="my-5">
      <%= form.label :artist %>
      <%= form.text_field :artist, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": @song.errors[:artist].none?, "border-red-400 focus:outline-red-600": @song.errors[:artist].any?}] %>
    </div>

    <div class="my-5">
      <%= form.label :album %>
      <%= form.text_field :album, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": @song.errors[:album].none?, "border-red-400 focus:outline-red-600": @song.errors[:album].any?}] %>
    </div>

    <div class="my-5">
      <%= form.label :cover_image %>
      <%= form.file_field :cover_image, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": @song.errors[:file].none?, "border-red-400 focus:outline-red-600": @song.errors[:file].any?}] %>
      <% if @song.cover_image.attached? %>
        <div class="mt-2">
          <%= image_tag @song.cover_image.variant(resize_to_limit: [100, 100]), class: "block w-24 h-24 object-cover" %>
        </div>
      <% end %>
    </div>

    <div class="inline">
      <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>

  <%= link_to "Show this song", @song, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= link_to "Back to songs", songs_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
</div>
